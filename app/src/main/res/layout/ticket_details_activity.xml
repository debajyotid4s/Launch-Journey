<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/babypink">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="32dp"
            android:background="@color/babypink"
            android:paddingHorizontal="24dp">

            <!-- Header Section -->
            <ImageView
                android:id="@+id/ivShipIcon"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_ship"
                app:tint="@color/dpurple"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/mi_sans"
                android:gravity="center"
                android:text="Launch Selected For Your Trip:"
                android:textColor="@color/dpurple"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivShipIcon" />

            <androidx.cardview.widget.CardView
                android:id="@+id/launchNameCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/textView2">

                <TextView
                    android:id="@+id/textLaunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mi_sans"
                    android:gravity="center"
                    android:padding="16dp"
                    android:textColor="@color/hpc"
                    android:textSize="24sp"
                    android:textStyle="italic" />
            </androidx.cardview.widget.CardView>

            <!-- Divider -->
            <View
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="@color/dpurple"
                android:alpha="0.3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/launchNameCard"/>

            <!-- Ticket Type Section -->
            <TextView
                android:id="@+id/ticketTypeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/mi_sans"
                android:text="Select Your Ticket Type"
                android:textColor="@color/dpurple"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <!-- Fixed RadioGroup implementation -->
            <RadioGroup
                android:id="@+id/ticketRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/ticketTypeTitle">

                <RadioButton
                    android:id="@+id/radioDeck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/babypink"
                    android:fontFamily="@font/mi_sans"
                    android:padding="16dp"
                    android:text="Deck Ticket"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:layout_marginBottom="8dp"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle" />

                <RadioButton
                    android:id="@+id/radioSingleCabin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/babypink"
                    android:fontFamily="@font/mi_sans"
                    android:padding="16dp"
                    android:text="Single Cabin Ticket"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:layout_marginBottom="8dp"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle" />

                <RadioButton
                    android:id="@+id/radioVIP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/babypink"
                    android:fontFamily="@font/mi_sans"
                    android:padding="16dp"
                    android:text="VIP Ticket"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:button="@null"
                    android:drawableEnd="?android:attr/listChoiceIndicatorSingle" />
            </RadioGroup>

            <!-- Ticket Quantity Section - Fixed -->
            <EditText
                android:id="@+id/edtNumberofTicket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@color/babypink"
                android:fontFamily="@font/mi_sans"
                android:gravity="center"
                android:hint="Enter Ticket Quantity (max 3)"
                android:inputType="number"
                android:maxLength="1"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textColorHint="@color/dpurple"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/ticketRadioGroup" />

            <!-- Warning Note -->
            <androidx.cardview.widget.CardView
                android:id="@+id/warningCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="#FFEBEE"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/edtNumberofTicket">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/ic_warning"
                        app:tint="@color/red" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mi_sans"
                        android:text="Note: You can't buy more than 3 tickets for one trip on a single Ship!"
                        android:textColor="@color/red"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Checkout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCheckout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/dpurple"
                android:elevation="6dp"
                android:fontFamily="@font/mi_sans"
                android:text="PROCEED TO CHECKOUT"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_shopping_cart"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:layout_constraintTop_toBottomOf="@+id/warningCard" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>