<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/babypink"
    tools:context=".home_page_activity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="93dp"
        android:background="@color/dpurple"
        android:elevation="4dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

    <!-- ScrollView Content -->

    <!-- Transparent Logout Button -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="53dp"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ImageView -->

            <!-- Title -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="225dp"
                android:layout_height="175dp"
                android:layout_gravity="center"
                app:cardCornerRadius="16dp"
                app:strokeWidth="0dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/homepage_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/welcome_icon" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/homepage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:alpha="1"
                android:fontFamily="@font/futura_cyrillic_book"
                android:gravity="center"
                android:scaleX="1"
                android:scaleY="1"
                android:text="Welcome to LaunchJourney"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Spinners inside CardView -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/gradient_bg"
                    android:padding="16dp">

                    <!-- From Location -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select From:"
                        android:fontFamily="@font/mi_sans"
                        android:textColor="@color/babypink"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/from_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        android:spinnerMode="dropdown" />

                    <!-- Destination -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mi_sans"
                        android:text="Select Destination:"
                        android:textColor="@color/babypink"
                        android:textSize="18sp" />

                    <Spinner
                        android:id="@+id/destination_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="4dp"
                        android:spinnerMode="dropdown" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Select Journey Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/mi_sans"
                android:text="Select Journey Date:"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <Button
                android:id="@+id/date_picker_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/btn_rounded_corner"
                android:textColor="@color/white"
                android:text="Choose Date"
                android:padding="10dp"
                android:fontFamily="@font/mi_sans"
                android:textSize="18sp" />

            <!-- Search Trip Button -->
            <Button
                android:id="@+id/search_trip_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="#6200EE"
                android:padding="10dp"
                android:background="@drawable/btn_rounded_corner"
                android:text="Search Trip"
                android:textColor="@color/white"
                android:fontFamily="@font/mi_sans"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/logout_button"
        android:layout_width="72dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/mi_sans"
        android:textSize="18sp" />

    <!-- ImageView Over Logout Button -->
    <ImageView
        android:id="@+id/logout_icon"
        android:layout_width="63dp"
        android:layout_height="75dp"
        android:layout_alignEnd="@id/logout_button"
        android:layout_alignBottom="@id/logout_button"
        android:layout_alignParentStart="true"
        android:layout_marginStart="341dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="Logout Icon"
        android:src="@drawable/logout" />

</RelativeLayout>